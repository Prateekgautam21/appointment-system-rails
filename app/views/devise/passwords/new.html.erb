<div class="container w-25 rounded bg-light p-4">

<h2>Forgot your password?</h2>
<hr class="border border-dark">
<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", :class=>'w-100 mb-2' %>
  </div>

  <div class="actions">
    <%= f.submit "Send me reset password instructions", :class=>'btn btn-success w-100 mt-2 mb-2' %>
  </div>
<% end %>


  <%= render "devise/shared/links" %>


</div>
